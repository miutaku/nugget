@page "/users"
@attribute [Authorize]
@using Nugget.Web.Models
@using Nugget.Web.Components
@using Nugget.Web.Services
@inject AdminApiService AdminApi
@inject NavigationManager Navigation

<PageTitle>ユーザー一覧 - Nugget</PageTitle>

<div class="page-container admin-page">
    <header class="page-header">
        <h1>
            <Icon Name="IconName.User" Size="28" Class="header-icon" />
            ユーザー一覧
        </h1>
        <p class="subtitle">システムに登録されているユーザーを検索・確認します</p>
    </header>

    <div class="search-section">
        <div class="search-group with-button">
            <Icon Name="IconName.Search" Size="16" Class="search-icon" />
            <input type="text" 
                   class="form-control" 
                   @bind="searchQuery" 
                   @bind:event="oninput"
                   @onkeyup="@Enter"
                   placeholder="名前、メールアドレス、部署などで検索..." />
            <button class="search-button" @onclick="SearchUsers">
                検索
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>ユーザー情報を読み込み中...</p>
        </div>
    }
    else if (users == null)
    {
        <div class="error-banner">
            <Icon Name="IconName.AlertCircle" Size="16" />
            ユーザー情報の取得に失敗しました。
        </div>
    }
    else if (!users.Any())
    {
        <div class="empty-state">
            <p>条件に一致するユーザーは見つかりませんでした。</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>部署</th>
                        <th>事業部</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td class="user-name-cell">
                                <span class="user-avatar-placeholder">@user.Name.FirstOrDefault()</span>
                                @user.Name
                            </td>
                            <td>@user.Email</td>
                            <td>@user.Department</td>
                            <td>@user.Division</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="list-footer">
            全 @users.Count 件
        </div>
    }
</div>

@code {
    private List<UserResponse>? users;
    private bool isLoading = true;
    private string searchQuery = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        try
        {
            users = await AdminApi.SearchUsersAsync(searchQuery);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
            users = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchUsers()
    {
        await LoadUsers();
    }

    private async Task Enter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchUsers();
        }
    }
}

<style>
